{% extends 'base.html.twig' %}

{% block title %}MegaCasting - {{ offer.name }}{% endblock %}

{% block body %}
  
    <div class="container my-4">
        <h1> {{ offer.name }} </h1>

        <div class="row mt-3">
            <div class="col">
                <img class="card-img-top" src=" {{ asset("img/film-production.jpg") }}" alt="Image casting film">
            </div>

            <div class="col">

            <h3>Information sur l'annonce</h3>

                <p>Description de l'offre:</p>
                <p>{{ offer.jobdescription }}</p>
                <br />
                <p>Description du profil rechercher:</p>
                <p>{{ offer.profildescription }}</p>
                <br />
                <p>Nombre de personnes rechercher:</p>
                <p>{{ offer.postcount }}</p>
            </div>

        </div>

        <div class="row mt-3 ml-1">
            <p>Date de d√©but:</p>
            <p class="ml-1">{{ offer.startcontractdate|date("d/m/Y") }}</p>

            <p class="ml-5">Date de publication:</p>
            <p class="ml-1">{{ offer.publishdatetime|date("d/m/Y") }}</p>
        </div>

        <h3 class="mt-5">Information sur l'annonceur</h3>

        <div class="row mt-3 ml-1 mb-5">
            <p>Nom de l'annonceur:</p>
            <p class="ml-1">{{ producer[0].name }}</p>

            <p class="ml-5">Adresse de contact:</p>
            <p class="ml-1">{{ producer[0].url }}</p>
        </div>        

        <a href="{{ path('showoffer', {identifier: offer.identifier}) }}" class="btn btn-postuler">Postuler</a>

    </div>

{% endblock %}