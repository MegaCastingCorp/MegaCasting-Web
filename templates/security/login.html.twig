{% extends 'loginbase.html.twig' %}

{% block title %}MegaCasting - Connexion{% endblock %}

{% block stylesheets %}
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-white py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-lg w-full space-y-8">
            <div>
                <img class="mx-auto h-20 w-auto" src="{{ asset('/img/Logo.png') }}" alt="logo">
                <h2 class="mt-6 text-center text-black text-3xl font-extrabold">
                    Connectez-vous Ã  votre compte MegaCasting
                </h2>
                <p class="mt-2 text-center text-sm text-black pt-2">
                    Ou
                    <a href="{{ path('security_registration') }}" class="font-medium text-blue-350 hover:text-blue">
                        S'inscrire
                    </a>
                </p>
            </div>
            <form class="mt-8 space-y-6" action="{{ path('security_login') }}" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                        {% if error %}
                            <div class="text-center py-4 lg:px-4">
                                <div class="p-2 bg-red-800 items-center text-red-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                                    <span class="flex rounded-full bg-red-500 uppercase px-2 py-1 text-xs font-bold mr-3">Erreur</span>
                                    <span> {{ error.messageKey|trans(error.messageData, 'security') }}</span>
                                    <svg class="fill-current opacity-75 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243L8 15.657l4.95-4.95z"/></svg>
                                </div>
                            </div>
                        {% endif %}
                        {% for message in app.flashes('inscription') %}
                            <div class="text-center pt-2 lg:px-2">
                                <div class="p-2 bg-green-800 items-center text-green-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                                    <span class="flex rounded-full bg-green-500 uppercase px-2 py-1 text-xs font-bold mr-3">Info</span>
                                    <span class="font-semibold mr-2 text-left flex-auto">{{ message }}</span>
                                    <button onclick="self.close()">
                                        <i class="fas fa-times px-2 align-top"></i>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('inactif') %}
                            <div class="text-center pt-2 lg:px-2">
                                <div class="p-2 bg-green-800 items-center text-green-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                                    <span class="flex rounded-full bg-green-500 uppercase px-2 py-1 text-xs font-bold mr-3">Info</span>
                                    <span class="font-semibold mr-2 text-left flex-auto">{{ message }}</span>
                                    <button onclick="self.close()">
                                        <i class="fas fa-times px-2 align-top"></i>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    <div class="m-4">
                        <label for="email" class="sr-only">Adresse email</label>
                        <input id="email" name="_username" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Adresse email">
                    </div>
                    <div class="m-4">
                        <label for="password" class="sr-only">Mot de passe</label>
                        <input id="password" name="_password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Mot de passe">
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        <label for="remember_me" class="ml-2 block text-sm text-black">
                            Se souvenir de moi
                        </label>
                    </div>

                    <div class="text-sm">
                        <a href="#" class="font-medium text-blue-350 hover:text-white">
                            Oublie de mot de passe
                        </a>
                    </div>
                </div>

                <input type="hidden" name="_target_path" value="/home"/>
                <div>
                    <button type="submit" class="group relative w-full flex transition duration-300 ease-out justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-350">
                        Connexion
                    </button>
                </div>
            </form>
        </div>
    </div>


{% endblock %}